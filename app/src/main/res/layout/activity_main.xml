<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/rxbutton"
            android:text="Introduccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/disposablebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disposable" />

        <Button
            android:id="@+id/compositeDisposable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CompositeDisposable"/>

        <Button
            android:id="@+id/operadores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operadores"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>